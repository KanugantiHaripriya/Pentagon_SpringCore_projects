<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    
    <!-- For Creating the objects-->
    <bean id="cash" class="paymentExample.Beans.Cash"> </bean>
    <bean id="credit" class="paymentExample.Beans.CreditCard"></bean>
    <bean id="debit" class="paymentExample.Beans.DebitCard"></bean>
    
	<bean id="shopping" class="paymentExample.Beans.Shopping">
	
		<!--<property name="p" ref="debit"></property> --><!--Setter Injection-->
		
		<constructor-arg name="p" ref="credit"></constructor-arg>
	</bean>
	
	
</beans>